server_name: "<%= @server_name %>"
public_baseurl: "https://<%= @server_name %>"
web_client_location: "<%= @web_client_location %>"
pid_file: /var/run/matrix-synapse.pid
listeners:
  - port: <%= @listen_port %>
    tls: false
    bind_addresses: ['<%= @listen_address %>']
    type: http
    x_forwarded: true
    resources:
      - names: [client, federation]
        compress: false
database:
  name: "<%= @database_name %>"
  args:
<% @database_args.each do |name, value| -%>
    <%= name %>: <%= value %>
<% end -%>
event_cache_size: "10K"
media_store_path: "<%= @media_store_path %>"
uploads_path: "<%= @uploads_path %>"
max_upload_size: "10M"
max_image_pixels: "32M"
dynamic_thumbnails: false
thumbnail_sizes:
- width: 32
  height: 32
  method: crop
- width: 96
  height: 96
  method: crop
- width: 320
  height: 240
  method: scale
- width: 640
  height: 480
  method: scale
- width: 800
  height: 600
  method: scale
url_preview_enabled: false
max_spider_size: "10M"
enable_registration: <% if @registration_enabled %>True<% else %>False<% end %>
registration_shared_secret: "<%= @registration_secret %>"
bcrypt_rounds: 12
allow_guest_access: true
enable_group_creation: true
macaroon_secret_key: "<%= @macaroon_secret_key %>"
expire_access_token: false
signing_key_path: "/etc/matrix-synapse/homeserver.signing.key"
key_refresh_interval: "1d" # 1 Day.
